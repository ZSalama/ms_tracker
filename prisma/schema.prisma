generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider  = "postgresql"
    url       = env("DATABASE_URL")
    directUrl = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
}

model User {
    id        Int      @id @default(autoincrement())
    clerkId   String   @unique
    email     String   @unique
    name      String?
    legion    Int      @default(0)
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    characters Character[] // One-to-many to Character

    @@map("user")
}

model Character {
    id          Int      @id @default(autoincrement())
    name        String   @unique
    level       Int      @default(1)
    class       String   @default("beginner")
    createdAt   DateTime @default(now())
    updatedAt   DateTime @updatedAt
    combatPower Int      @default(0)
    arcaneForce Int      @default(0)
    sacredPower Int      @default(0)

    userId Int
    user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

    gears GearItem[] // One-to-many to Gear

    flameWeightMainType   String @default("Str")
    flameWeightSubType    String @default("Dex")
    flameWeightAttackType String @default("Attack")
    flameWeightMainStat   Int    @default(12)
    flameWeightAttack     Int    @default(3)
    flameWeightAllStat    Int    @default(10)
    flameWeightDamage     Int    @default(15)

    totalFlameScore Int @default(0)

    @@map("character")
}

model Potential {
    id    Int    @id @default(autoincrement())
    type  String @default("None")
    value String @default("None")

    gearSlot1 GearItem? @relation("Potential1")
    gearSlot2 GearItem? @relation("Potential2")
    gearSlot3 GearItem? @relation("Potential3")
}

model GearItem {
    id          Int    @id @default(autoincrement())
    name        String @default("Unnamed")
    type        String @default("Ring")
    rarity      String @default("None")
    tradeStatus String @default("untradeable") @map("trade_status")
    starForce   Int    @default(0) @map("star_force")

    slot         String @default("1")
    fastAnalysis String @default("slow") // how fast to analysis gear

    url String? // URL to the image of the gear item

    attackPowerIncrease Int @default(0) @map("attack_power_increase")
    combatPowerIncrease Int @default(0) @map("combat_power_increase")
    requiredLevel       Int @default(0) @map("required_level")

    characterId Int
    character   Character @relation(fields: [characterId], references: [id], onDelete: Cascade)

    createdAt  DateTime @default(now())
    updatedAt  DateTime @updatedAt
    isEquipped String   @default("notEquipped")

    totalStr Int?
    baseStr  Int?
    flameStr Int?
    starStr  Int?

    totalDex Int?
    baseDex  Int?
    flameDex Int?
    starDex  Int?

    totalInt Int?
    baseInt  Int?
    flameInt Int?
    starInt  Int?

    totalLuk Int?
    baseLuk  Int?
    flameLuk Int?
    starLuk  Int?

    totalMaxHP Int?
    baseMaxHP  Int?
    flameMaxHP Int?
    starMaxHP  Int?

    totalMaxMP Int?
    baseMaxMP  Int?
    flameMaxMP Int?
    starMaxMP  Int?

    totalAttackPower Int?
    baseAttackPower  Int?
    flameAttackPower Int?
    starAttackPower  Int?

    totalMagicAttackPower Int?
    baseMagicAttackPower  Int?
    flameMagicAttackPower Int?
    starMagicAttackPower  Int?

    totalDefense Int?
    baseDefense  Int?
    flameDefense Int?
    starDefense  Int?

    totalJump Int?
    baseJump  Int?
    flameJump Int?
    starJump  Int?

    totalSpeed Int?
    baseSpeed  Int?
    flameSpeed Int?
    starSpeed  Int?

    totalAllStat Int?
    baseAllStat  Int?
    flameAllStat Int?

    totalBossDamage Int?
    baseBossDamage  Int?
    flameBossDamage Int?

    totalIgnoreEnemyDefense Int?
    baseIgnoreEnemyDefense  Int?
    flameIgnoreEnemyDefense Int?

    totalFlameScore Int? @default(0)

    potential1Id Int?       @unique @map("potential_1_id")
    potential1   Potential? @relation("Potential1", fields: [potential1Id], references: [id])

    potential2Id Int?       @unique @map("potential_2_id")
    potential2   Potential? @relation("Potential2", fields: [potential2Id], references: [id])

    potential3Id Int?       @unique @map("potential_3_id")
    potential3   Potential? @relation("Potential3", fields: [potential3Id], references: [id])
}
